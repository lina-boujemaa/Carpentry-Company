@model store.Models.Product

<h2 class="text-center">Delete Product</h2>

<div class="text-center">
    <h3>Are you sure you want to delete this product?</h3>
    <div>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Brand:</strong> @Model.Brand</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Category:</strong> @Model.Category</p>
        <p><strong>Price:</strong> @Model.Price TND</p>
        <p><strong>Created At:</strong> @Model.CreatedAt.ToShortDateString()</p>
        @if (!string.IsNullOrEmpty(Model.ImageFileName))
        {
            <img src="~/products/@Model.ImageFileName" alt="Product Image" width="100" />
        }
    </div>

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
