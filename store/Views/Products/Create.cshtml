@model ProductDto

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Product</h2>

        <form method="post" enctype="multipart/form-data">
            <!-- Name Field -->
            <div class="form-group row">
                <label asp-for="Name" class="col-md-4 col-form-label">Name</label>
                <div class="col-md-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <!-- Brand Field -->
            <div class="form-group row">
                <label asp-for="Brand" class="col-md-4 col-form-label">Brand</label>
                <div class="col-md-8">
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
            </div>

            <!-- Category Field -->
            <div class="form-group row">
                <label asp-for="Category" class="col-md-4 col-form-label">Category</label>
                <div class="col-md-8">
                    <select asp-for="Category" class="form-control">
                        <option value="">Select a Category</option>
                        <option value="Woodworking">Woodworking</option>
                        <option value="Tools">Tools</option>
                        <option value="Furniture">Furniture</option>
                        <option value="Decor">Decor</option>
                        <option value="Safety">Safety</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>

            <!-- Price Field -->
            <div class="form-group row">
                <label asp-for="Price" class="col-md-4 col-form-label">Price</label>
                <div class="col-md-8">
                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <!-- Description Field -->
            <div class="form-group row">
                <label asp-for="Description" class="col-md-4 col-form-label">Description</label>
                <div class="col-md-8">
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <!-- Image Field -->
            <div class="form-group row">
                <label asp-for="ImageFile" class="col-md-4 col-form-label">Image</label>
                <div class="col-md-8">
                    <input asp-for="ImageFile" type="file" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row text-center">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Create Product</button>
                    <a href="@Url.Action("Index", "Products")" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
